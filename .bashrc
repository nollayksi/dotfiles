##Defaults 
export VISUAL=nvim
export EDITOR=nvim
export BROWSER=firefox

## Aliases
# Long format list
alias ll="ls -la"

# Print my public IP
alias myip='curl ipinfo.io/ip'

# Neovim as an editor
alias vi="nvim"
alias vim="nvim"

# Neovim config
alias vimconf="nvim ~/.config/nvim/init.vim"

# Reload bash
alias rlbash="source ~/.bashrc"
